                <script>
                    // Open cart modal on click
                    document.getElementById("cartIcon").addEventListener("click", async () => {
                        try {
                            const response = await fetch('/cart'); // Fetch cart contents from the backend
                            const cartHTML = await response.text();
                            document.getElementById("cartItems").innerHTML = cartHTML; // Update modal with cart items
                            document.getElementById("cartModal").style.display = "block";
                        } catch (error) {
                            console.error("Error loading cart:", error);
                        }
                    });
                
                    // Close modal
                    document.getElementById("closeCartModal").addEventListener("click", () => {
                        document.getElementById("cartModal").style.display = "none";
                    });
                </script>
                
