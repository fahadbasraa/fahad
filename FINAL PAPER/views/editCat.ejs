<div class="container my-5">
  <h1 class="mb-4">Edit Category</h1>

  <!-- Edit Category Form -->
  <form action="/categories/edit/<%= category._id %>" method="POST">
    
    <!-- Category Name -->
    <div class="mb-3">
      <label for="name" class="form-label">Category Name:</label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        class="form-control"
        value="<%= category.name %>" 
        required
      >
    </div>

    <!-- Category Picture -->
    <div class="mb-3">
      <label for="picture" class="form-label">Category Picture:</label>
      <input 
        type="text" 
        id="picture" 
        name="picture" 
        class="form-control"
        value="<%= category.picture %>"
      >
    </div>

    <!-- Submit Button -->
    <div class="mb-3">
      <button type="submit" class="btn btn-warning">Update Category</button>
    </div>
  </form>

  <!-- Back to Categories Link -->
  <br>
  <a href="/categories" class="btn btn-primary">Back to Categories</a>
</div>